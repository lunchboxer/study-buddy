    "svelte-fa": "^4.0.4",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^5.4.11",
    "wrangler": "^3.99.0",
    "zod": "^3.24.1"
  },
  "type": "module",
  "dependencies": {
    "@libsql/client": "^0.15.14",
    "@sveltejs/adapter-node": "^5.3.1"
  }
